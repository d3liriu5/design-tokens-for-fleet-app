{
  "source": ["input/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": `build/css/`,
      "files": tokens.map((tokenCategory) => ({
        "destination": `output/css/${tokenCategory}.css`,
        "format": "css/variables",
        "filter": {
          attributes: {
            category: tokenCategory,
          }
        },
      })),
    },

    "android": {
      "transformGroup": "android",
      "files": [{
        "destination": "output/android/font_dimens.xml",
        "format": "android/fontDimens"
      },{
        "destination": "output/android/dimens.xml",
        "format": "android/dimens"
      },{
        "destination": "output/android/colors.xml",
        "format": "android/colors"
      }]
    }
  }
}
